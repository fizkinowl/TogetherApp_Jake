<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UserRegistrationActivity"
    android:background="@color/pastel_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Box -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="290dp">

            <ImageView
                android:id="@+id/register_ImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:background="@drawable/together_app" />

            <TextView
                android:id="@+id/show_welcome_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_ImageView"
                android:text="Register Here"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/black"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="#77ffffff">

            <!--Show Full Name -->
            <ImageView
                android:id="@+id/ic_username"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_user_icon" />

            <EditText
                android:id="@+id/username_prof_EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/ic_username"
                android:hint="Username"
                android:textColorHint="@color/black"
                android:layout_marginStart="50dp"
                android:textSize="18sp"/>

            <View
                android:id="@+id/divider_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/username_prof_EditText"
                android:background="#6C6C6C"
                />

            <!-- Show Email -->
            <ImageView
                android:id="@+id/ic_email"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_email"
                android:layout_below="@id/divider_name"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/email_prof_EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_email"
                android:hint="Email"
                android:textColorHint="@color/black"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/divider_name"
                android:textSize="18sp"/>

            <View
                android:id="@+id/divider_email"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/email_prof_EditText"
                android:background="@color/light_grey1"/>

            <!-- Show Mobile # -->
            <ImageView
                android:id="@+id/ic_mobile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_mobile"
                android:layout_below="@id/divider_email"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/mobile_prof_EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_mobile"
                android:hint="Mobile #"
                android:textColorHint="@color/black"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/divider_email"
                android:textSize="18sp"/>

            <View
                android:id="@+id/divider_mobile"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/mobile_prof_EditText"
                android:background="@color/light_grey1"/>


            <!-- Show Password -->
            <ImageView
                android:id="@+id/ic_password"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_password"
                android:layout_below="@id/divider_mobile"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/password_EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_password"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="@color/black"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/divider_mobile"
                android:textSize="18sp"/>

            <View
                android:id="@+id/divider_password"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/password_EditText"
                android:background="@color/light_grey1"/>


            <!-- Show Repassword -->
            <ImageView
                android:id="@+id/ic_rePassword"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_password"
                android:layout_below="@id/divider_password"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/rePassword_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_rePassword"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColorHint="@color/black"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/divider_password"
                android:textSize="18sp"/>

            <View
                android:id="@+id/divider_rePassword"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/rePassword_TextView"
                android:background="@color/light_grey1"/>

            <Button
                android:id="@+id/signUp_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_rePassword"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/round_button"
                android:gravity="center"
                android:onClick="register"
                android:text="Register Account"
                android:textAllCaps="false"
                android:textColor="#d3d8e3"
                android:textSize="20dp" />

            <Button
                android:id="@+id/signIn_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/signUp_Button"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/round_button"
                android:gravity="center"
                android:onClick="login"
                android:text="Existing user"
                android:textAllCaps="false"
                android:textColor="#d3d8e3"
                android:textSize="20dp" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>